{
  "name": "iCAC",
  "version": "",
  "description": "A Chrome Extension for CAC i18n.",
  "icons": {
    "16": "image/icon_16.png",
    "48": "image/icon_48.png",
    "128": "image/icon_128.png"
  },
  "web_accessible_resources": [
    "form.html",
    "image/*.png",
    "image/*.json"
  ],
  "permissions": [
    "https://*.confluence.atlassian.com/*",
    "contextMenus",
    "clipboardWrite",
    "notifications",
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.confluence.atlassian.com/*"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://aui-cdn.atlassian.com/ https://ajax.googleapis.com/*; object-src 'self' https://aui-cdn.atlassian.com/*",
  "manifest_version": 2
}
